apiVersion: v1
kind: Service
metadata:
  annotations:
{% if zookeeper_serviceAnnotations is defined and (zookeeper_serviceAnnotations | from_yaml) %}
{{ zookeeper_serviceAnnotations | from_yaml | to_nice_yaml(indent=2) | indent(4, true) }}
{% endif %}
  labels:
    app: {{ zookeeper_name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ zookeeper_component }}
  name: {{ zookeeper_name }}
  namespace: {{ namespace }}
spec:
  type: {{ zookeeper_service_type }}
  ports:
    - name: client
      port: {{ zookeeper_service_ports_client_port }}
      targetPort: {{ zookeeper_service_ports_client_targetPort }}
      protocol: {{ zookeeper_service_ports_client_protocol }}
  selector:
    app: {{ zookeeper_name }}
    component: {{ zookeeper_component }}
